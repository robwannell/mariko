<div><%= bootstrap_form_for(@event, :html => { :multipart => true }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.text_field :name %>
  </div>
  <div class="field">
   
    <%= f.datetime_select :starts_at, :order => [:month, :day, :year, :hour]%>
  </div>
  <div class="field">
   
    <%= f.text_field :location %>
  </div>
  
  <% unless @event.avatar.blank? %>
  <p><b>Current image</b><br/><%= link_to (image_tag @event.avatar.url(:thumb)), @event.avatar.url(:standard), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image'%></p>
  <% else %>
  <%= f.file_field :avatar, label: 'Add an image'%>
  <% end %>
  <div class="field">
   
    <%= f.text_area :details, label: 'More Info', rows: '8'  %>
  </div>
  
  <div class="actions">
  <div class="col-sm-offset-11">
  <%= f.submit :Submit, class: 'btn btn-default'%>
  </div>
<% end %>
</div>
</div>